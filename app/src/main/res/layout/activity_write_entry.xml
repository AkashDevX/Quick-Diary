<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WriteEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_light">
        
        <!-- Header with Title and Done Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="72dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical"
            android:background="@color/background_light">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/write_entry"
                android:textColor="@color/primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.02"
                android:gravity="start|center_vertical" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/doneButton"
                style="@style/PinkButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:minWidth="0dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <!-- Tags Section -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:scrollbars="none"
            android:fadeScrollbars="false">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tagsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:singleSelection="true"
                app:selectionRequired="false" />

        </HorizontalScrollView>

        <!-- Word Count and Last Saved Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/wordCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/word_count"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start" />

            <TextView
                android:id="@+id/lastSavedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_saved"
                android:textSize="13sp"
                android:textColor="@color/text_muted"
                android:fontFamily="@font/poppins_regular"
                android:gravity="end" />

        </LinearLayout>

        <!-- Main Text Input Area -->
        <EditText
            android:id="@+id/entryText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="top|start"
            android:hint="Write your thoughts..."
            android:textColorHint="@color/text_muted"
            android:textColor="@color/text_dark"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine|textCapSentences"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:scrollbars="vertical"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.3"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.01" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

