<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PinkButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_on_pink</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="PinkButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="EnhancedTitleText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="EnhancedBodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="PageTitleStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources>

